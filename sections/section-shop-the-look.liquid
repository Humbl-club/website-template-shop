{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'section-shop-the-look.css' | asset_url | stylesheet_tag }}

{%- style -%}
.section-{{ section.id }} .section-inner {  
  padding-top: {{ section.settings.top_padding | times: 0.8 }}px;
  padding-bottom: {{ section.settings.bottom_padding | times: 0.8 }}px;
}

@media only screen and (min-width: 750px) {
  .section-{{ section.id }} .section-inner {  
    padding-top: {{ section.settings.top_padding }}px;
    padding-bottom: {{ section.settings.bottom_padding }}px;
  }
}
  
{%- endstyle -%}

{% if section.settings.card_spacing == 0 %}
{% assign card_space = 'grid-card-spacing-zero' %}
{% endif %}
{% if section.settings.card_spacing == 10 %}
{% assign card_space = 'grid-card-spacing-ten' %}
{% endif %}
{% if section.settings.card_spacing == 20 %}
{% assign card_space = 'grid-card-spacing-twenty' %}
{% endif %}
{% if section.settings.card_spacing == 30 %}
{% assign card_space = 'grid-card-spacing-thirty' %}
{% endif %}
{% if section.settings.card_spacing == 40 %}
{% assign card_space = 'grid-card-spacing-fourty' %}
{% endif %}
{% if section.settings.card_spacing == 50 %}
{% assign card_space = 'grid-card-spacing-fifty' %}
{% endif %}
{% if section.settings.card_spacing == 60 %}
{% assign card_space = 'grid-card-spacing-sixty' %}
{% endif %}

<div class="section-container section-image-with-text section-shop-the-look section-{{ section.id }} iwt-dt-layout-{{ section.settings.dt_image_width }} color-scheme-{{ section.settings.text_color }} color-scheme-{{ section.settings.bg_color }}">

{% if section.settings.top_border %}
<hr class="section-border section-border-color-{{ section.settings.border_color }} section-border-width-{{ section.settings.border_width }}">
{% endif %}  
  
<div class="section-inner">

{% if section.settings.section_heading_position == 'top' %}
{% unless section.settings.section_label == blank and section.settings.heading == blank and section.settings.subheading == blank %}
<div class="section-header section-header-std-padding page-width text-align-{{ section.settings.heading_alignment }}">  
{% unless section.settings.caption == blank %}<div class="section-label">{{ section.settings.caption }}</div>{% endunless %}
{% unless section.settings.heading == blank %}<h2 class="{{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>{% endunless %}
{% unless section.settings.subheading == blank %}{{ section.settings.subheading }}{% endunless %}
{% if section.settings.btn_position == 'top' and section.settings.btn_txt != blank %}
<div class="section-viewall-button button-color-scheme--{{ section.settings.button_color }}">
<a class="button button--{{ section.settings.btn_style }}" href="{{ section.settings.btn_link }}">{{ section.settings.btn_txt }}</a>
</div>
{% endif %}
</div>
{% endunless %}
{% endif %}
  
<div class="image-with-text-content-container{% if section.settings.card_spacing > 0 or section.settings.inner_padding > 0 %} std-page-padding{% endif %} {{ section.settings.content_width | escape }} {{ card_space }}">

<div class="image-with-text--image image-ratio-{{ section.settings.image_ratio }}">

<div class="image-cover-container">
<div class="image-cover-wrapper">

{% if section.settings.image %}
{{ section.settings.image | image_url: width: 2400 | image_tag: loading: 'lazy' }}
{% else %}
{% render 'media-placeholder-lifestyle', style: 1 %}
{% endif %}
</div>
</div> 

</div>

<div class="image-with-text--text stl-list-position-{{ section.settings.txt_position_desktop }}">
<div class="image-with-text--content">
{% if section.settings.section_heading_position == 'normal' %}
  {% unless section.settings.caption == blank and section.settings.heading == blank and section.settings.subheading == blank %}
  <div class="section-heading--inline align-{{ section.settings.heading_alignment }}">
  {% if section.settings.caption != blank %}<div class="section-label">{{ section.settings.caption }}</div>{% endif %}
	<h2 class="{{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
    {{ section.settings.subheading }}
  </div>
    {% endunless %}
{% endif %}
<div class="stl-list-wrapper list-columns-{{ section.settings.card_grid_layout }}">
  <ul class="stl-list list-align-{{ section.settings.content_hoz_alignment }} card-layout-{{ section.settings.card_layout }} card-size-{{ section.settings.card_size }}">
  {% for block in section.blocks %}
    {% if block.settings.product != blank %}
    <li class="grid__item">
      {% render 'card-product',
        card_product: block.settings.product,
        media_aspect_ratio: settings.card_img_aspect_ratio,
        show_secondary_image: true,
        show_price: section.settings.show_price,
        price_position: settings.card_price_position,
        show_sale_badges: settings.badges_show_sale,
        show_vendor: section.settings.show_vendor,
        show_vendor_inline: settings.card_show_vendor_inline,
        show_quick_add: section.settings.enable_quick_add,
        lazy_load: true,
        image_resolution: 'standard',
        section_id: section.id
      %}
    </li>
      {% else %}
    <li class="grid__item">
      {% render 'card-product',
        card_product: block.settings.product,
        media_aspect_ratio: settings.card_img_aspect_ratio,
        show_secondary_image: false,
        show_price: section.settings.show_price,
        price_position: settings.card_price_position,
        show_sale_badges: false,
        show_vendor: section.settings.show_vendor,
        show_vendor_inline: settings.card_show_vendor_inline,
        show_quick_add: section.settings.enable_quick_add,
        lazy_load: true,
        image_resolution: 'standard',
        section_id: section.id,
        placeholder: true,
        sequence_number: forloop.index
      %}
    </li>      
      {% endif %}
  {% endfor %}
  </ul>

{% if section.settings.btn_position == 'middle' and section.settings.btn_txt != blank %}
  <div class="collection-lookbook-viewall-button section-button--position-inline button-color-scheme--{{ section.settings.button_color }}">
    <a class="button button--{{ section.settings.btn_style }}" href="{{ section.settings.btn_link }}">{{ section.settings.btn_txt }}</a>
  </div>
{% endif %}
</div>
  
</div>
</div>
</div>

{% if section.settings.btn_position == 'footer' and section.settings.btn_txt != blank %}
<div class="page-width collection-lookbook-viewall-button section-button--position-footer text-align-{{ section.settings.txt_alignment }} button-color-scheme--{{ section.settings.button_color }}">
<a class="button button--{{ section.settings.btn_style }}" href="{{ section.settings.btn_link }}">{{ section.settings.btn_txt }}</a>  
</div>
{% endif %}

</div>  

{% if section.settings.bottom_border %}
<hr class="section-border section-border-color-{{ section.settings.border_color }} section-border-width-{{ section.settings.border_width }}">
{% endif %}

</div>

{% schema %}
