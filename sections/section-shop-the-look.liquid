    "label": "t:sections.all.layouts.horizontal_spacing"
    },
    {
      "type": "select",
      "id": "txt_position_desktop",
      "label": "t:sections.shop_the_look.settings.desktop_text_position.label",
      "info": "t:sections.shop_the_look.settings.desktop_text_position.info",
      "options": [
        {
          "value": "top",
          "label": "t:sections.all.alignment.top"
        },
        {
          "value": "middle",
          "label": "t:sections.all.alignment.middle"
        },
        {
          "value": "bottom",
          "label": "t:sections.all.alignment.bottom"
        }
		],
      "default": "middle"
    },
    {
      "type": "select",
      "id": "content_hoz_alignment",
      "label": "t:sections.all.alignment.alignment_header",
      "options": [
        {
          "value": "left",
          "label": "t:sections.all.alignment.left"
        },
        {
          "value": "center",
          "label": "t:sections.all.alignment.center"
        },
        {
          "value": "right",
          "label": "t:sections.all.alignment.right"
        }
		],
      "default": "center"
    },
    {
      "type": "select",
      "id": "card_grid_layout",
      "label": "t:sections.shop_the_look.settings.card_grid_layout.label",
      "options": [
        {
          "value": "one",
          "label": "1"
        },
        {
          "value": "two",
          "label": "2"
        }
		],
      "default": "one"
    },
    {
      "type": "select",
      "id": "card_layout",
      "label": "t:sections.shop_the_look.settings.card_layout.label",
      "options": [
        {
          "value": "normal",
          "label": "t:sections.all.layouts.vertical"
        },
        {
          "value": "horizontal",
          "label": "t:sections.all.layouts.horizontal"
        }
		],
      "default": "normal"
    },
    {
      "type": "select",
      "id": "card_size",
      "label": "t:sections.shop_the_look.settings.card_size.label",
      "options": [
        {
          "value": "small",
          "label": "t:sections.all.size.small"
        },
        {
          "value": "normal",
          "label": "t:sections.all.size.large"
        }        
		],
      "default": "small"
    },
    {
