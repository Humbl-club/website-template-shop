{{ 'section-image-with-hotspots.css' | asset_url | stylesheet_tag }}

{%- style -%}
.section-{{ section.id }} .section-inner {
  padding-top: {{ section.settings.top_padding | times: 0.8 }}px;
  padding-bottom: {{ section.settings.bottom_padding | times: 0.8 }}px;  
}

@media only screen and (min-width: 750px) {
  .section-{{ section.id }} .section-inner {
    padding-top: {{ section.settings.top_padding }}px;
    padding-bottom: {{ section.settings.bottom_padding }}px;
  }  
}
{%- endstyle -%}

<div class="section-{{ section.id }} section-image-hotspots color-scheme-{{ section.settings.text_color }} color-scheme-{{ section.settings.bg_color }}">

{% if section.settings.top_border %}
<hr class="section-border section-border-color-{{ section.settings.border_color }} section-border-width-{{ section.settings.border_width }}">
{% endif %} 
  
<div class="section-inner {{ section.settings.content_width }}">  

{% unless section.settings.section_label == blank and section.settings.heading == blank and section.settings.subheading == blank %}
<div class="section-header section-header-std-padding{% if section.settings.content_width == 'page-width-full' %} page-width{% endif %} align-{{ section.settings.content_alignment }}">
{% unless section.settings.section_label == blank %}<div class="section-label">{{ section.settings.section_label }}</div>{% endunless %}
{% unless section.settings.heading == blank %}<h2>{{ section.settings.heading }}</h2>{% endunless %}
{% unless section.settings.subheading == blank %}{{ section.settings.subheading }}{% endunless %}
</div>
{% endunless %}
  
<div class="image-hotspots--image image-ratio-{{ section.settings.image_ratio }} hotspot-style-{{ section.settings.hotspot_style }} hotspot-color-{{ section.settings.hotspot_color }} hotspot-interaction-{{ section.settings.hotspot_desktop_interaction }}{% if section.settings.hotspot_animate %} hotspots-animate{% endif %}">

{% for block in section.blocks %}
<style>
.hsb-{{ block.id }} {
  top: {{ block.settings.pos_y }}%;
  left: {{ block.settings.pos_x }}%;
}  
@media only screen and (min-width: 950px) {
  .hsc-{{ block.id }} {
    top: {{ block.settings.pos_y }}% !important;
    left: {{ block.settings.pos_x }}% !important; 
    transform: translateX(-50%) translateY(calc(-100% - 15px));
    bottom: auto !important;
    min-width: 300px;
  }
  .hotspot-interaction-hover .hsb-{{ block.id }}:hover + .hsc-{{ block.id }} {
    visibility: visible;
    opacity: 1;
  }
}
</style>

{% case block.type %}

{% when 'hotspot' %}

<button class="hotspot-button hsb-{{ block.id }}" aria-label="{{ 'accessibility.open' | t }}">{% if section.settings.hotspot_style == 'icon' %}{% render 'icon-plus' %}{% endif %}</button>
<div class="hotspot--product hotspot-info hsc-{{ block.id }}{% if block.settings.pos_x < 20 %} hotspot-info-offset-left{% endif %}{% if block.settings.pos_x > 70 %} hotspot-info-offset-right{% endif %}">
  <button class="hotspot-close-button" aria-label="{{ 'accessibility.close' | t }}">{% render 'icon-close' %}</button>
  {% if block.settings.product != blank %}
  <div class="hotspot-product-card">
    <a href="{{ block.settings.product.url }}">
    <div class="hotspot-product-card--image card-image-ratio-{{ settings.card_img_aspect_ratio }}">
      {{ block.settings.product.featured_image | image_url: width: 180 | image_tag: loading: 'lazy' }}
    </div>
    <div class="hotspot-product-card--text">
      <h3>{{ block.settings.product.title }}</h3>
      <div class="hotspot-product-card--price{% if settings.card_price_sale_highlight %} card-price-sale-highlighted{% endif %}">
      {% render 'price', product: block.settings.product, price_class: '' %}
      </div>
    </div>
    </a>
  </div>
  {% endif %}
</div>
  
{% when 'info_hotspot' %}

<button class="hotspot-button hsb-{{ block.id }}" aria-label="{{ 'accessibility.open' | t }}">{% if section.settings.hotspot_style == 'icon' %}{% render 'icon-plus' %}{% endif %}</button>
<div class="hotspot--no-product hotspot-info hsc-{{ block.id }}{% if block.settings.pos_x < 20 %} hotspot-info-offset-left{% endif %}{% if block.settings.pos_x > 70 %} hotspot-info-offset-right{% endif %}">
  <button class="hotspot-close-button" aria-label="{{ 'accessibility.close' | t }}">{% render 'icon-close' %}</button>
  <div class="hotspot-card--contents">
    {% if block.settings.image %}
    <div class="hotspot-card--image hotspot-info-card-image-ratio-{{ block.settings.image_ratio }}">
    {{ block.settings.image | image_url: width: 360 | image_tag: loading: 'lazy' }}
    </div>
    {% endif %}
    <div class="hotspot-card--text">
    <h3>{{ block.settings.heading }}</h3>
    <div class="rte">{{ block.settings.description }}</div>
    {% if block.settings.hotspot_link_label != blank %}
    <div class="hotspot-card--link">
      <a class="link--underlined" href="{{ block.settings.hotspot_link }}">{{ block.settings.hotspot_link_label }}</a>
    </div>
    {% endif %}
    </div>
  </div>
</div>
  
{% endcase %}
  
{% endfor %}
  
<div class="image-hotspots--image-wrapper">
{% if section.settings.image %}
{{ section.settings.image | image_url: width: 2800 | image_tag: loading: 'lazy' }}
{% else %}
{% render 'media-placeholder-lifestyle', style: 9 %}
{% endif %}  
</div>
</div>  
</div>

{% if section.settings.bottom_border %}
<hr class="section-border section-border-color-{{ section.settings.border_color }} section-border-width-{{ section.settings.border_width }}">
{% endif %}
  
</div>

