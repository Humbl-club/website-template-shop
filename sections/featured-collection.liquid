{{ 'section-featured-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{%- if section.settings.enable_quick_add -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
.section-{{ section.id }} .section-inner {
  padding-top: {{ section.settings.padding_top | times: 0.8 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.8 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }} .section-inner {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}   

@media only screen and (min-width: 1025px) { 
  .section-{{ section.id }}:has(.slider-arrows-position-top-right):has(.section-header.text-align-right) .section-header-std-padding {
    margin-bottom: {{ settings.section_header_spacing | at_least: 70 }}px;
  }
}  
{%- endstyle -%}

{% assign prod_limit = section.settings.no_items %}
{% assign card_media_aspect_ratio = settings.card_img_aspect_ratio %}

{% assign show_swiping_images = false %}
{% assign show_secondary_image = false %}
{% if section.settings.card_image_display == 'multi_images' %}
{% assign show_swiping_images = true %}
{% endif %}
{% if section.settings.card_image_display == 'second_image_hover' %}
{% assign show_secondary_image = true %}
{% endif %}

{% if section.settings.dt_grid == '2' %}
{% assign max_in_view = 2 %}
{% endif %}
{% if section.settings.dt_grid == '3' %}
{% assign max_in_view = 3 %}
{% endif %}
{% if section.settings.dt_grid == '4' %}
{% assign max_in_view = 4 %}
{% endif %}

{% assign image_resolution = 'standard' %}
{% if max_in_view < 3 %}
{% assign image_resolution = 'high' %}
{% endif %}

<div class="section-container featured-collection-section section-{{ section.id }} color-scheme-{{ section.settings.text_color }} color-scheme-{{ section.settings.bg_color }}">

{% if section.settings.top_border %}
<hr class="section-border section-border-color-{{ section.settings.border_color }} section-border-width-{{ section.settings.border_width }}">
{% endif %}  

<div class="section-inner section-inner-min-lr-margin">

{% unless section.settings.section_label == blank and section.settings.heading == blank and section.settings.description == blank %}  
<div class="section-header section-header-std-padding page-width text-align-{{ section.settings.content_alignment }}">
{% unless section.settings.section_label == blank %}<div class="section-label">{{ section.settings.section_label }}</div>{% endunless %}
<h2 class="{{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
<div class="section-header-paragraph">{{ section.settings.description }}</div>
</div>
{% endunless %}

<div{% if section.settings.products_layout == 'carousel' %} class="slider-outer-wrapper slider-arrows-position-{{ settings.carousel_arrow_position }}"{% else %} class="featured-collection-static-grid-wrapper {{ section.settings.content_width }}"{% endif %} id="slider-{{ section.id }}">
  <ul role="list" class="grid{% if section.settings.products_layout == 'carousel' %} slider-grid slider-element{% endif %} featured-collection-grid slider-grid--columns-mobile-{{ section.settings.mobile_grid }} slider-grid--columns-tablet-{{ section.settings.tablet_grid }} slider-grid--columns-desktop-{{ section.settings.dt_grid }}">
    {% if section.settings.collection != blank %}
    
    {% for product in section.settings.collection.products limit: prod_limit %}
    {% assign lazy_load = false %}
    {%- if forloop.index > 2 -%}
      {%- assign lazy_load = true -%}
    {%- endif -%}
    <li class="grid__item featured-collection-grid-item{% if section.settings.rollover_titles %} fc-card-rollover-title{% endif %}">
      {% render 'card-product',
        card_product: product,
        media_aspect_ratio: card_media_aspect_ratio,
        show_secondary_image: show_secondary_image,
        show_swiping_images: show_swiping_images,
        pagination_color_scheme: section.settings.pagination_color_scheme,
        show_rating: section.settings.show_rating,
        show_price: section.settings.show_prices,
        price_position: settings.card_price_position,
        show_sale_badges: settings.badges_show_sale,
        show_vendor: section.settings.show_vendor,
        show_vendor_inline: settings.card_show_vendor_inline,
        show_quick_add: section.settings.enable_quick_add,
        show_swatches: section.settings.show_swatches,
        lazy_load: lazy_load,
        image_resolution: image_resolution,
        section_id: section.id
      %}
    </li>
    {% endfor %}

    {% else %}

    {% for product in (1..prod_limit) %}
    <li class="grid__item featured-collection-grid-item{% if section.settings.rollover_titles %} fc-card-rollover-title{% endif %}">
      {% render 'card-product',
        card_product: product,
        media_aspect_ratio: card_media_aspect_ratio,
        show_secondary_image: false,
        show_swiping_images: false,
        pagination_color_scheme: section.settings.pagination_color_scheme,
        show_rating: section.settings.show_rating,
        show_price: section.settings.show_prices,
        price_position: settings.card_price_position,
        show_sale_badges: settings.badges_show_sale,
        show_vendor: section.settings.show_vendor,
        show_vendor_inline: settings.card_show_vendor_inline,
        show_quick_add: section.settings.enable_quick_add,
        show_swatches: section.settings.show_swatches,
        image_resolution: image_resolution,
        section_id: section.id,
        placeholder: true,
        sequence_number: forloop.index
      %}
    </li>
    {% endfor %}
      
    {% endif %}
  </ul>

{% if section.settings.products_layout == 'carousel' and section.settings.collection.products.size > max_in_view and section.settings.no_items > max_in_view %}
<div class="slider-arrows arrow-style-{{ section.settings.arrow_style }}">
  <button class="slider-arrow-left" aria-label="{{ 'accessibility.left' | t }}">{% render 'icon-caret' %}</button>
  <button class="slider-arrow-right" aria-label="{{ 'accessibility.right' | t }}">{% render 'icon-caret' %}</button>
</div>
{% endif %}

{% if section.settings.collection == blank and section.settings.no_items > max_in_view and section.settings.products_layout == 'carousel' %}
<div class="slider-arrows arrow-style-{{ section.settings.arrow_style }}">
  <button class="slider-arrow-left" aria-label="{{ 'accessibility.left' | t }}">{% render 'icon-caret' %}</button>
  <button class="slider-arrow-right" aria-label="{{ 'accessibility.right' | t }}">{% render 'icon-caret' %}</button>
</div>
{% endif %}  

{% render 'scrolltrack' %}
  
</div>

{% if section.settings.btn_enable %}
<div class="section-footer page-width text-align-{{ section.settings.content_alignment }} button-color-scheme--{{ section.settings.btn_color_scheme }}">
    {% if section.settings.btn_style == 'solid' %}
	<a href="{{ section.settings.collection.url }}" role="link" class="button button--solid">{{ section.settings.btn_label }}</a>
    {% endif %}
    {% if section.settings.btn_style == 'outline' %}
	<a href="{{ section.settings.collection.url }}" role="link" class="button button--outline">{{ section.settings.btn_label }}</a>
    {% endif %}
    {% if section.settings.btn_style == 'link' %}
	<a href="{{ section.settings.collection.url }}" role="link" class="link--underlined">{{ section.settings.btn_label }}</a>
    {% endif %}
</div>
{% endif %}

</div>

{% if section.settings.bottom_border %}
<hr class="section-border section-border-color-{{ section.settings.border_color }} section-border-width-{{ section.settings.border_width }}">
{% endif %}

</div>

