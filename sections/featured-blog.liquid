{{ 'section-featured-blog.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'component-article-card.css' | asset_url | stylesheet_tag }}

{% assign numb_items = section.settings.blog.articles_count %}

{% assign max_items = section.settings.blog.articles_count %}
{% if section.settings.post_limit < section.settings.blog.articles_count %}
{% assign max_items = section.settings.post_limit %}
{% endif %}

{% assign date_format = settings.date_format %}

{%- style -%}
.section-{{ section.id }} .section-inner {
  padding-top: {{ section.settings.padding_top | times: 0.8 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.8 | round: 0 }}px;
}
  
@media only screen and (min-width: 750px) {
  .section-{{ section.id }} .section-inner {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }  
}

@media only screen and (min-width: 1025px) { 
  .section-{{ section.id }}:has(.slider-arrows-position-top-right):has(.section-header.text-align-right) .section-header-std-padding {
    margin-bottom: {{ settings.section_header_spacing | at_least: 70 }}px;
  }
}
  
.section-{{ section.id }} .section-header, .section-{{ section.id }} .section-footer {
  text-align: {{ section.settings.content_alignment }};
}

{% if section.settings.show_image == false %}
  .section-{{ section.id }} .slider-arrows-position-middle .slider-arrows {
    top: 85px !important;
  }
{% endif %}
  
{%- endstyle -%}


{% if section.settings.show_author or section.settings.show_date %}
  <style>
  .shopify-design-mode .section-featured-blog .slider-arrows-position-middle .slider-arrows {
    margin-top: -50px;
  }  
  </style>
  {% if section.settings.show_tags %}
  <style>
  .shopify-design-mode .section-featured-blog .slider-arrows-position-middle .slider-arrows {
    margin-top: -78px;
  }  
  </style>
  {% endif %}
{% endif %}

{% if section.settings.show_tags and section.settings.show_author == false and section.settings.show_date == false %}
  <style>
  .shopify-design-mode .section-featured-blog .slider-arrows-position-middle .slider-arrows {
    margin-top: -60px;
  }  
  </style>
{% endif %}


<div id="{{ section.id }}" class="section-{{ section.id }} section-featured-blog numb-posts-{{ max_items }} color-scheme-{{ section.settings.text_color }} color-scheme-{{ section.settings.bg_color }}">

{% if section.settings.top_border %}
<hr class="section-border section-border-color-{{ section.settings.border_color }} section-border-width-{{ section.settings.border_width }}">
{% endif %}
  
<div class="section-inner section-inner-min-lr-margin">

<div class="section-header section-header-std-padding {{ section.settings.content_width | escape }}">  
{% unless section.settings.section_label == blank %}<div class="section-label">{{ section.settings.section_label }}</div>{% endunless %}
{% unless section.settings.heading == blank %}<h2 class="{{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>{% endunless %}
{% unless section.settings.sub_heading == blank %}<div class="section-header-paragraph">{{ section.settings.sub_heading }}</div>{% endunless %}
</div>

{% if section.settings.blog.articles != empty %}
  
{% if section.settings.section_layout == 'slider' %}
<div class="slider-outer-wrapper slider-arrows-position-{{ settings.carousel_arrow_position }} fb-wrapper{% if section.settings.show_tags %} fb-wrapper-with-tags{% endif %}" id="slider-{{ section.id }}">
  <ul class="slider-grid slider-element slider-grid--columns-mobile-1 featured-blog-grid slider-grid--columns-tablet-{{ section.settings.layout_columns_tablet }} slider-grid--columns-desktop-{{ section.settings.layout_columns_desktop }} {{ section.settings.content_width | escape }}" role="list">  
  {% for article in section.settings.blog.articles limit: section.settings.post_limit %}
    {% assign lazy_load = false %}
    {%- if forloop.index > 2 -%}
      {%- assign lazy_load = true -%}
    {%- endif -%} 
    <li class="grid__item">
      {%- render 'card-article',
        article: article,
        media_aspect_ratio: settings.blog_card_image_ratio,
        show_image: section.settings.show_image,
        show_tags: section.settings.show_tags,
        show_date: section.settings.show_date,
        date_format: date_format,
        show_author: section.settings.show_author,
        show_excerpt: false,
        lazy_load: lazy_load
      -%}
    </li>
  {% endfor %}
  </ul>

  {% if section.settings.post_limit > 2 and numb_items > 2 %}
  <div class="slider-arrows arrow-style-{{ section.settings.arrow_style }}">
    <button class="slider-arrow-left" aria-label="{{ 'accessibility.left' | t }}">{% render 'icon-caret' %}</button>
    <button class="slider-arrow-right" aria-label="{{ 'accessibility.right' | t }}">{% render 'icon-caret' %}</button>
  </div>
  {% endif %}

  {% render 'scrolltrack' %}
  
</div>
  
{% else %}

<div class="featured-blog-grid feat-blog-grid--tablet-{{ section.settings.layout_columns_tablet }} feat-blog-grid--desktop-{{ section.settings.layout_columns_desktop }} {{ section.settings.content_width | escape }}">  
{% for article in section.settings.blog.articles limit: section.settings.post_limit %}
    {% assign lazy_load = false %}
    {%- if forloop.index > 2 -%}
      {%- assign lazy_load = true -%}
    {%- endif -%}   
    {%- render 'card-article',
      article: article,
      media_aspect_ratio: settings.blog_card_image_ratio,
      show_image: section.settings.show_image,
      show_tags: section.settings.show_tags,
      show_date: section.settings.show_date,
      date_format: date_format,
      show_author: section.settings.show_author,
      show_excerpt: false,
      lazy_load: lazy_load
    -%}
{% endfor %}
</div>

{% endif %}

{% endif %}
  
{% if section.settings.btn_enable and section.settings.post_limit < section.settings.blog.articles_count %}
<div class="section-footer {{ section.settings.content_width | escape }} color-scheme-{{ section.settings.bg_color }}">
    {% if section.settings.btn_style == 'solid' %}
	<a href="{{ section.settings.blog.url }}" role="link" class="button button--solid">{{ section.settings.btn_txt }}</a>
    {% endif %}
    {% if section.settings.btn_style == 'outline' %}
	<a href="{{ section.settings.blog.url }}" role="link" class="button button--outline">{{ section.settings.btn_txt }}</a>
    {% endif %}
    {% if section.settings.btn_style == 'link' %}
	<a href="{{ section.settings.blog.url }}" role="link" class="link--underlined">{{ section.settings.btn_txt }}</a>
    {% endif %}
</div>
{% endif %}

</div> 

{% if section.settings.bottom_border %}
<hr class="section-border section-border-color-{{ section.settings.border_color }} section-border-width-{{ section.settings.border_width }}">
{% endif %}
  
</div>

