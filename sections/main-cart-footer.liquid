{% style %}
.main-cart--footer.bg-border:not(.main-cart-footer-mobile-sticky) .main-cart-footer-container, .main-cart--footer.bg-tinted:not(.main-cart-footer-mobile-sticky) .main-cart-footer-container {
  border-radius: {{ section.settings.cart_footer_corner_radius }}px;
}

@media only screen and (min-width: 750px) {
  .main-cart--footer.bg-border .main-cart-footer-container, .main-cart--footer.bg-tinted .main-cart-footer-container {
    border-radius: {{ section.settings.cart_footer_corner_radius }}px;
  }  
}
{% endstyle %}

<div class="main-cart--footer bg-{{ section.settings.summary_background }}{% if section.settings.sticky_mobile %} main-cart-footer-mobile-sticky{% endif %}{% if cart == empty %} is-empty{% endif %}" id="main-cart-footer" data-id="{{ section.id }}">
  <div class="main-cart-footer-container">
    {% if section.settings.show_summary_title %}
    <div class="cart__footer_header">
      <span class="{{ section.settings.summary_title_font_size }}">{{ 'sections.cart.summary_title' | t }}</span>
    </div>
    {% endif %}
    <div class="cart__footer">
      <div class="cart__blocks">
        {% for block in section.blocks %}
          {%- case block.type -%}
            {%- when '@app' -%}
              {% render block %}
            {%- when 'subtotal' -%}
              <div class="js-contents" {{ block.shopify_attributes }}>
                {%- if cart.cart_level_discount_applications.size > 0 -%}
                <div class="totals">
                  <div class="totals-row">
                  <div class="totals-column">
                  <p>{{ 'sections.cart.headings.subtotal' | t }}</p>
                  </div>
                  <div class="totals-column">
                  <p class="totals__subtotal-value">{{ cart.items_subtotal_price | money }}</p>
                  </div>
                  </div>
                </div>
                
                <div class="totals">
                  {%- for discount in cart.cart_level_discount_applications -%}
                  <div class="totals-row">
                  <div class="totals-column">
                  <p>{{ 'sections.cart.headings.discount' | t }}: {{ discount.title }}</p>
                  </div>
                  <div class="totals-column">
                  <p class="totals__subtotal-value">-{{ discount.total_allocated_amount | money }}</p>
                  </div>
                  </div>
                  {%- endfor -%}
                </div>            
                {%- endif -%}
                
                <div class="totals text-{{ section.settings.totals_font_size }} font-weight-{{ section.settings.totals_font_weight }}">
                  <div class="totals-row grand-total-row{% unless cart.cart_level_discount_applications.size < 1 %} grand-total-row-border-top{% endunless %}">
                  <div class="totals-column">
                  <p>{{ 'sections.cart.headings.total' | t }}</p>
                  </div>
                  <div class="totals-column">
                  <p class="totals__subtotal-value">{{ cart.total_price | money }}</p>
                  </div>
                  </div>
                </div>

              </div>

              <div class="cart-footer-tax-info">
              <small class="tax-note caption rte">
                {%- if cart.taxes_included and shop.shipping_policy.body != blank -%}
                  {{ 'sections.cart.taxes_included_and_shipping_policy_html' | t: link: shop.shipping_policy.url }}
                {%- elsif cart.taxes_included -%}
                  {{ 'sections.cart.taxes_included_but_shipping_at_checkout' | t }}
                {%- elsif shop.shipping_policy.body != blank -%}
                  {{ 'sections.cart.taxes_and_shipping_policy_at_checkout_html' | t: link: shop.shipping_policy.url }}
                {%- else -%}
                  {{ 'sections.cart.taxes_and_shipping_at_checkout' | t }}
                {%- endif -%}
              </small>
              </div>
            
              <div class="cart__ctas" {{ block.shopify_attributes }}>
                <noscript>
                  <button type="submit" class="cart__update-button button button--secondary" form="cart">
                    {{ 'sections.cart.update' | t }}
                  </button>
                </noscript>
  
                <button type="submit" id="checkout" class="cart__checkout-button button" name="checkout"{% if cart == empty %} disabled{% endif %} form="cart">
                  {{ 'sections.cart.checkout' | t }}
                </button>
              </div>
            
              {%- if additional_checkout_buttons and section.settings.show_dynamic_checkout -%}
              <div class="cart__dynamic-checkout-buttons additional-checkout-buttons additional-checkout-buttons--vertical">
                {{ content_for_additional_checkout_buttons }}
              </div>
              {%- endif -%}
        
            {% if settings.cart_show_payment_methods %}
            <div class="cart-footer__payment-methods">
              <ul class="payments_list_cart" role="list">
              {% for type in shop.enabled_payment_types %}
                <li class="list-payment__item">{{ type | payment_type_svg_tag: class: 'icon' }}</li>
              {% endfor %}  
              </ul>
            </div>
            {% endif %}
          {%- endcase -%}
        {% endfor %}

        <div id="cart-errors"></div>
      </div>
    </div>
  </div>
</div>

{% if section.settings.sticky_mobile %}
<script>
function updateBodyPadding() {
    const footerSticky = document.querySelector('.main-cart-footer-mobile-sticky');

    if (!footerSticky) {
        // If the div is not found, remove bottom padding
        document.body.style.paddingBottom = '';
        return;
    }

    // Get screen width
    const screenWidth = window.innerWidth;

    if (screenWidth <= 750) {
        // Apply bottom padding equivalent to the footer height
        const footerHeight = footerSticky.offsetHeight;
        document.body.style.paddingBottom = `${footerHeight}px`;
    } else {
        // Remove bottom padding for larger screens
        document.body.style.paddingBottom = '';
    }
}

// Run the function on page load and on window resize
window.addEventListener('load', updateBodyPadding);
window.addEventListener('resize', updateBodyPadding);
</script>
{% endif %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    function isIE() {
      const ua = window.navigator.userAgent;
      const msie = ua.indexOf('MSIE ');
      const trident = ua.indexOf('Trident/');

      return (msie > 0 || trident > 0);
    }

    if (!isIE()) return;
    const cartSubmitInput = document.createElement('input');
    cartSubmitInput.setAttribute('name', 'checkout');
    cartSubmitInput.setAttribute('type', 'hidden');
    document.querySelector('#cart').appendChild(cartSubmitInput);
    document.querySelector('#checkout').addEventListener('click', function(event) {
      document.querySelector('#cart').submit();
    });
  });
</script>

