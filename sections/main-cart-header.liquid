
{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.8 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.8 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}
{%- endstyle -%}

<div class="section-{{ section.id }}-padding cart-page-header page-width align-{{ section.settings.text_alignment }}">
  <h1 class="{{ section.settings.heading_size }}">{{ 'sections.cart.title' | t }}</h1>
  {% if settings.cart_show_message and cart != empty %}
  <div class="cart-header-message{% if settings.cart_message_border_opacity > 0 %} cart-header-message-with-border{% endif %}">
    {% if settings.cart_message_title != blank %}<span class="cart-header-message--title h3">{{ settings.cart_message_title }}</span>{% endif %}
    {% if settings.cart_message_text != blank %}<span class="cart-header-message--text">{{ settings.cart_message_text }}</span>{% endif %}
  </div>  
  {% endif %}

</div>

{% schema %}
  {
    "name": "t:sections.main-cart-header.name",
    "settings": [
    {
      "type": "text_alignment",
      "id": "text_alignment",
      "label": "t:sections.all.alignment.alignment_header",
      "default": "center"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "t:sections.all.heading_size.label",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.small.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.normal.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.large.label"
        }
        ],
      "default": "h1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 180,
      "step": 10,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 180,
      "step": 10,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 40
    }      
    ]
  }
{% endschema %}