{{ 'section-collection-cards.css' | asset_url | stylesheet_tag }}
{% if section.settings.section_layout == 'slider' %}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{% endif %}

{% assign grid_numb = 'grid--even' %}
{% assign numb_items = section.blocks.size %}
{% if numb_items == 1 or numb_items == 3 or numb_items == 5 or numb_items == 7 or numb_items == 9 or numb_items == 11 %}
{% assign grid_numb = 'grid--odd' %}
{% endif %}

{%- style -%}
.section-{{ section.id }} .section-inner {
  padding-top: {{ section.settings.padding_top | times: 0.8 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.8 | round: 0 }}px;
}
  
@media only screen and (min-width: 750px) {
  .section-{{ section.id }} .section-inner {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }  
}

@media only screen and (min-width: 1025px) { 
  .section-{{ section.id }}:has(.slider-arrows-position-top-right):has(.section-header.text-align-right) .section-header-std-padding {
    margin-bottom: {{ settings.section_header_spacing | at_least: 70 }}px;
  }
}
  
{% if section.settings.card_layout == 'overlay' %}
.section-{{ section.id }} .card-collection, .section-{{ section.id }} .card-collection h2, .section-{{ section.id }} .card-collection h3 {
  color: #ffffff;
}

.section-{{ section.id }} .section-inner h3, .section-{{ section.id }} .grid__item p {
 	color: #ffffff;  
}
{% endif %}
  
.section-{{ section.id }} .collection-list-static-grid {
  grid-row-gap: {{ section.settings.grid_spacing_vertical }}px;
}
  
{% if section.settings.grid_layout_mobile == '1' %}
.section-{{ section.id }} .collection-list-static-grid {
  grid-template-columns: repeat(1,1fr);
}
{% endif %}

@media only screen and (min-width: 750px) {
  .section-{{ section.id }} .collection-list-static-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.grid_layout_tablet }},1fr);
    grid-template-rows: repeat(1,1fr);
    grid-row-gap: {{ section.settings.grid_spacing_vertical }}px;    
  }
}
  
@media only screen and (min-width: 950px) {
  .section-{{ section.id }} .collection-list-static-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.grid_layout_desktop }},1fr);
    grid-template-rows: repeat(1,1fr);
    grid-row-gap: {{ section.settings.grid_spacing_vertical }}px;    
  }
}
  
{%- endstyle -%}

{% if section.settings.card_heading_visibility == 'rollover_central' %}
<style>
  @media only screen and (min-width: 1025px) {
    .card-collection {
      position: static;
    }
    .card-collection--title {
      position: absolute;
      width: 100vw;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      pointer-events: none;
      z-index: 2;
    }
  }
</style>
{% endif %}

{% if section.settings.card_heading_visibility == 'rollover_central' and section.settings.section_layout == 'slider' %}
<style>
  @media only screen and (min-width: 1025px) {
    .card-collection {
      position: relative;
    }
    .card-collection--title {
      width: 100%;
    }
  }
</style>
{% endif %}

{% assign card_image_res = 'standard' %}
{% if section.settings.grid_layout_tablet == 2 or section.settings.grid_layout_desktop == 2 %}
{% assign card_image_res = 'high' %}
{% endif %}

{% assign card_button_position = section.settings.cards_button_position %}

<div class="section-container collection-cards-section section-{{ section.id }} color-scheme-{{ section.settings.text_color }} color-scheme-{{ section.settings.bg_color }}">

{% if section.settings.top_border %}
<hr class="section-border section-border-color-{{ section.settings.border_color }} section-border-width-{{ section.settings.border_width }}">
{% endif %}

<div class="section-inner section-inner-min-lr-margin">
  
{% unless section.settings.section_label == blank and section.settings.heading == blank and section.settings.sub_heading == blank %}
<div class="section-header section-header-std-padding page-width text-align-{{ section.settings.content_alignment }}">  
{% unless section.settings.section_label == blank %}<div class="section-label">{{ section.settings.section_label }}</div>{% endunless %}
{% unless section.settings.heading == blank %}<h2 class="{{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>{% endunless %}
{% unless section.settings.sub_heading == blank %}<div class="section-header-paragraph">{{ section.settings.sub_heading }}</div>{% endunless %}
</div>
{% endunless %}

<div class="col-grid-wrapper collection-cards-grid-spacing-{{ section.settings.grid_spacing_horizontal }} collection-cards-margin-{{ section.settings.content_width }} collection-cards-heading-style-{{ section.settings.card_heading_visibility }} {% if section.settings.section_layout == 'slider' %}slider-outer-wrapper slider-arrows-position-{{ settings.carousel_arrow_position }} collection-list-grid slider-grid-card-type-{{ section.settings.card_layout }}{% else %}{{ section.settings.content_width | escape }}{% endif %}"{% if section.settings.section_layout == 'slider' %} id="slider-{{ section.id }}"{% endif %}>

{% if section.settings.section_layout == 'slider' %}
<ul id="ul-{{ section.id }}" class="grid slider-element slider-grid slider-grid--columns-mobile-{{ section.settings.grid_layout_mobile }} slider-grid--columns-tablet-{{ section.settings.grid_layout_tablet }} slider-grid--columns-desktop-{{ section.settings.grid_layout_desktop }} slider-grid-collection{% if section.settings.media_radius_top_only %} media-radius-top-only{% endif %}">
{% for block in section.blocks %}
  <li class="grid__item" {{ block.shopify_attributes }}>
  {% render 'card-collection',
      image_resolution: card_image_res,
      card_collection: block.settings.collection,
      collection_description: block.settings.description,
      show_button: section.settings.show_card_buttons,
      button_position: card_button_position,
      button_style: section.settings.cards_button_style,
      buttons_label: block.settings.button_label,
      collection_image: block.settings.image,
      media_aspect_ratio: section.settings.card_ratio,
      card_type: section.settings.card_layout,
      title_position: section.settings.card_heading_position,
      heading_size: section.settings.card_heading_size,
      heading_visibility: section.settings.card_heading_visibility,
      sequence_number: forloop.index
  %}    
  </li>
{% endfor %}
</ul>
{% if section.blocks.size > section.settings.grid_layout_desktop %}

<div class="slider-arrows arrow-style-{{ section.settings.arrow_style }}">
  <button class="slider-arrow-left" aria-label="{{ 'accessibility.left' | t }}">{% render 'icon-caret' %}</button>
  <button class="slider-arrow-right" aria-label="{{ 'accessibility.right' | t }}">{% render 'icon-caret' %}</button>
</div>

{% render 'scrolltrack' %}
  
{% endif %}

{% endif %}

{% if section.settings.section_layout == 'grid' %}
  
<ul class="collection-list-static-grid {{ grid_numb }}{% if section.settings.media_radius_top_only %} media-radius-top-only{% endif %}">
{% for block in section.blocks %}
  <li class="static-grid-item" {{ block.shopify_attributes }}>
  {% render 'card-collection',
      image_resolution: card_image_res,
      card_collection: block.settings.collection,
      collection_video: block.settings.video,
      collection_image: block.settings.image,
      collection_description: block.settings.description,
      show_button: section.settings.show_card_buttons,
      button_position: section.settings.cards_button_position,
      button_style: section.settings.cards_button_style,
      buttons_label: block.settings.button_label,
      media_aspect_ratio: section.settings.card_ratio,
      card_type: section.settings.card_layout,
      title_position: section.settings.card_heading_position,
      heading_size: section.settings.card_heading_size,
      heading_visibility: section.settings.card_heading_visibility,
      sequence_number: forloop.index
  %}  
  </li>
{% endfor %}
</ul>
  
{% endif %}

</div>

{% if section.settings.btn_enable %}
<div class="page-width text-align-{{ section.settings.content_alignment }} section-footer button-color-scheme--{{ section.settings.btn_color_scheme }}">
    {% if section.settings.btn_style == 'solid' %}
	<a href="{{ section.settings.btn_url }}" role="link" class="button button--solid">{{ section.settings.btn_txt }}</a>
    {% endif %}
    {% if section.settings.btn_style == 'outline' %}
	<a href="{{ section.settings.btn_url }}" role="link" class="button button--outline">{{ section.settings.btn_txt }}</a>
    {% endif %}
    {% if section.settings.btn_style == 'link' %}
	<a href="{{ section.settings.btn_url }}" role="link" class="link--underlined">{{ section.settings.btn_txt }}</a>
    {% endif %}
</div>
{% endif %}
  
</div>  

{% if section.settings.bottom_border %}
<hr class="section-border section-border-color-{{ section.settings.border_color }} section-border-width-{{ section.settings.border_width }}">
{% endif %}  
</div>

  
